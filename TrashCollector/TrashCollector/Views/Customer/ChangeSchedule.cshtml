@model TrashCollector.Models.Schedule
@{
    if (!Request.IsAuthenticated)
    {
        Response.Redirect(Url.Action("Index", "Home"));
    }
    ViewBag.Title = "ChangeSchedule";

}

<h2>ChangeSchedule</h2>

@using (Html.BeginForm("ChangeSchedule", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Edit your Schedule</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label>Day of the week:</label>
        <div class="col-md-10">
            <select class="form-control" id="Day" name="Day">
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday">Saturday</option>
                <option value="Sunday">Sunday</option>
            </select>
        </div>
    </div>
    <div class="form-group">

        <label><input type="radio" name="VactionMode" id="Vacation" >Vacation mode(No grabage will be collected while this is active)</label>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

